        <%= simple_form_for 'contact#index', class: 'form-horizontal' do |f| %>
          <%= f.input :name, :required => true %>
          <%= f.input :email, :required => true %>
          <%= f.input :message, :as => :text, :required => false, :input_html => {:rows => 5} %>
          <div class="hidden">
            <%= f.input :nickname, :hint => 'Leave this field blank!'%>
          </div>
          <div class="form-actions">
            <%= f.button :submit, 'Send Message', :class=> 'btn btn-primary pull-right' %>
