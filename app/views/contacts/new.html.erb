  <div class="disp container" style="background-color:rgba(0, 0, 0, 0.4);width:70vw;border-radius: 20px;overflow: scroll;margin-top: 60px; margin-bottom: 40px; text-align: left;">
        <div class="splashtext2">
          <%= t('header_23') %>
        </div>

        <div class="ptext mast__text js-spanize">
          <%= t('text_24') %>
        </div>

        <div class="container-fluid" style="padding:30px;">
          <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
              <%= f.input :name, :required => true, :label => t('text_38') %>
              <%= f.input :email, :required => true %>
              <%= f.input :message, :as => :text,  :label => t('text_39'), :required => true %>
              <div class= "hidden">
                <%= f.input :nickname, :hint => 'Leave this field blank!' %>
              </div>
              <div>
                </br>
                <p id="emailHelp" class="form-text mast__text js-spanize" style="color:#aaa;font-style:italic;font-size:1em;text-shadow: 1px 1px 4px #000; text-align: center"><%= t('text_28') %></p>
                <br>
                <% if I18n.locale == I18n.default_locale %>
                <center><%= f.button :submit, t('send_btn'), :class=> "btn btn-primary btnmsg faa-pulse animated-hover faa-slow" %></center>
                <% else %>
                <center><%= f.button :submit, t('send_btn'), :class=> "btn btn-primary btnmsg faa-pulse animated-hover faa-slow", :locale => 'zh_TW' %></center>
                <% end %>
              </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
